{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@permit-watch/application": ["libs/core/application/src/index.ts"],
      "@permit-watch/domain": ["libs/core/domain/src/index.ts"],
      "@permit-watch/infra": ["libs/core/infra/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
